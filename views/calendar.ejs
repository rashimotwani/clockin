            document.addEventListener('DOMContentLoaded', function () {
                let reminder=JSON.parse(document.getElementById("new1").getAttribute('arr'));

                let greminder=[];
                let length=<%-length%>;

                for(let i=0;i<length;i++)
                {
                    if(reminder[i].rrule!==undefined)
                    {
                        if(reminder[i].rrule.freq==='daily'){
                            let obj = {
                                start: reminder[i].rrule.dtstart,
                                end: reminder[i].rrule.until,
                            }
                            greminder.push(obj);
                        }
                        else if (reminder[i].rrule.freq==='weekly'){
                            let d = new Date( reminder[i].rrule.dtstart );
                            let n = d.getDay();
                            let k = n+1;
                            let obj = {
                                start: reminder[i].rrule.dtstart,
                                end: reminder[i].rrule.until,
                                weekdays: [k]
                            }
                            greminder.push(obj);
                        }
                        else if (reminder[i].rrule.freq==='monthly'){
                            let l = 1;
                            let d = new Date( reminder[i].rrule.dtstart );
                            let n = d.getDate();
                            let obj = {
                                start: reminder[i].rrule.dtstart,
                                end: reminder[i].rrule.until,
                                monthlyInterval: l ,
                                on :[{days : n}]
                            }
                            greminder.push(obj);

                        }
                        else if(reminder[i].rrule.freq==='yearly'){
                            let l = 1;
                            let d = new Date( reminder[i].rrule.dtstart );
                            let n = d.getDate();
                            let m = d.getMonth();
                            let k = m+1;
                            let obj = {
                                start: reminder[i].rrule.dtstart,
                                end: reminder[i].rrule.until,
                                yearlyInterval: l ,
                                on :[{
                                    months: k,
                                    days : n
                                }]
                            }
                            greminder.push(obj);
                        }
                    }
                    else{
                    greminder.push(reminder[i].start);
                    }
                }

               
                console.log(greminder);

                let None = [<%-vnone%>]
                let Official = [<%-vofficial%>]
                let Unofficial = [<%-vunofficial%>]
                let Bday = [<%-vbday%>]
                let Misc = [<%-vmisc%>]
                let GCal = greminder
                new Vue({
                    el: '#app',
                    data() {
                        return {
                            attributes: [
                                {
                                    dot: 'blue',
                                    dates: None,
                                    
                                },
                                {
                                    dot: 'pink',
                                    dates: Misc,
                                },
                                {
                                    dot: 'yellow',
                                    dates: Unofficial,
                                },
                                {
                                    dot: 'teal',
                                    dates: Bday,
                                },
                                {
                                    dot: 'red',
                                    dates: Official,
                                },
                                {
                                    dot:'purple',
                                    dates: GCal,
                                },

                            ],
                        };
                    }

                });

            });
        </script>

